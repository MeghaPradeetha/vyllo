rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User Profiles - Public read, owner write
    match /users/{userId}/profile/{document} {
      allow read: if true;
      allow write: if isOwner(userId);
    }
    
    // Platform Connections - Private, owner only
    match /users/{userId}/connections/{platform} {
      allow read, write: if isOwner(userId);
    }
    
    // Content Cache - Public read, server write only
    match /public/data/contentCache/{contentId} {
      allow read: if true;
      allow write: if false; // Only server can write via Admin SDK
    }
    
    // Sync Status - Owner read, server write
    match /users/{userId}/syncStatus/{platform} {
      allow read: if isOwner(userId);
      allow write: if false; // Only server can write
    }
  }
}